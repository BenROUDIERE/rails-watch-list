<div class="text-center">
  <h1>Save any kind of movies</h1>
  <div class="container-md">
    <div class="d-flex align-items justify-content-between mb-3">
      <h3 class="mb-0">My Lists</h3>
      <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-success' %>
    </div>
    <div class="row">
      <% @lists.each do |list| %>
        <div class="co-12 colsm-6 col-md-4 mb-3">
          <%= link_to list_path(list), class:'text-decoration-none' do %>
              <%= list.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
</div>
