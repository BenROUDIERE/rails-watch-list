<div class="position-relative">
  <h1><%= @list.name %> list</h1>
  <%= link_to "Back on My Lists", lists_path, class: 'btn btn-success'  %>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: 'btn btn-success'  %>
  <%= link_to 'Delete this list', list_path(@list), method: :delete, class: 'btn btn-warning', data: { confirm: 'Are you sure you want to delete this list?' } %>
</div>

<div class="container mb-5">
  <% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <div class="d-flex align-items-end justify-content-between pt-4">
      <div class="banner rounded shadow h-100" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
        <div class="container">
          <h1><strong><%= movie.title %> <span class="text-muted font-weight-normal"></span></strong></h1>
          <p><small class="text-white"><%= movie.overview %></small>.</p>
          <i class="fas fa-quote-left mr-2 text-white"></i><small class="flex-grow-1 text-white"><%= bookmark.comment %></small>
        </div>
      </div>
    </div>
   <% end %>
</div>




